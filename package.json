{
  "name": "webhack",
  "version": "1.0.0",
  "description": "Faithful JavaScript port of NetHack",
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:chargen && npm run test:e2e",
    "test:unit": "node --test test/unit/*.test.js",
    "test:chargen": "node --test test/comparison/chargen.test.js",
    "test:e2e": "node --test --test-concurrency=1 test/e2e/*.test.js",
    "serve": "python3 -m http.server 8080",
    "postinstall": "./scripts/setup-testing.sh"
  },
  "keywords": [
    "nethack",
    "roguelike"
  ],
  "license": "NHPL",
  "dependencies": {
    "puppeteer": "^24.37.2"
  }
}
